#!/usr/bin/env bash

echo "==> Checking go mod..." && \
    (go mod tidy -diff || (echo "==> Execute \"go mod tidy\" and commit again." && exit 1)) && \
    echo "==> Checking generated code..." && \
    (go generate ./... && git diff --exit-code -- **/api_mock.go **/wire_gen.go >/dev/null 2>&1 || (echo "==> \"go generate ./...\" has changed api_mock.go/wire_gen.go. Stage the changes and try again." && exit 1)) && \
    echo "==> Running golangci-lint..." && \
    golangci-lint run && \
    echo "==> Running go test..." && \
    go test -coverprofile=cover_raw.out ./... && \
    echo "==> Generating test coverage report..." && \
    awk 'NR==1 || (!/mocks\// && !/_mock\.go/) {print}' cover_raw.out > cover.out && rm cover_raw.out && \
    go tool cover -html=cover.out -o=cover.html && \
    go tool cover -func=cover.out | tee >(cat >&2) | grep "total:" | awk '{if ($3 < 90.0) { print "==> Does not meet the minimum coverage 90%"; exit 1 }}' && \
    rm cover.out
